<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".SchedulerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidAppScheduler"
        tools:targetApi="31" >
        <activity
            android:name=".presentation.schedule_viewer.ScheduleViewerActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidAppScheduler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.schedule_editor.ScheduleEditorActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidAppScheduler"/>

        <activity
            android:name=".presentation.app_picker.AppPickerActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidAppScheduler"/>
        
        <receiver
            android:name=".platform.AppLaunchReceiver"
            android:exported="true" />

    </application>

</manifest>